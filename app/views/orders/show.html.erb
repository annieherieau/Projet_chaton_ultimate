<section id="banner" class="py-3" style="background: #F9F3EC;">
  <div class="container">
    <div class="hero-content py-5 my-3">
      <h2 class="display-1 mt-3 mb-0">Détails de la <span class="text-primary">commande</span></h2>
    </div>
  </div>
</section>

<div class="container my-5">
  <div class="row">
    <div class="col-md-8 mx-auto"> 
      <table class="table">
        <tr>
          <td><strong>ID de la commande:</strong></td>
          <td><%= @order.id %></td>
        </tr>
        <tr>
          <td><strong>Utilisateur:</strong></td>
          <td><%= @order.user.email %></td>
        </tr>
        <tr>
          <td><strong>Date de la commande:</strong></td>
          <td><%= @order.created_at.strftime("%d/%m/%Y à %H:%M") %></td>
        </tr>
      </table>

      <h2>Produits commandés:</h2>
      <table class="table">
        <tr>
          <th>Titre</th>
          <th>Prix</th>
        </tr>
        <% @order.items.each do |item| %>
          <tr>
            <td>
              <%= link_to item_path(item) do %>
                <%= image_tag(item.photo, class: "rounded", style: "width: 50px;") if item.photo.present? %>
              <% end %>
              <%= item.title %>
            </td>
            <td><%= item.price %>€</td>
          </tr>
        <% end %>
      </table>

      <p><strong>Prix total :</strong> <%= @order.amount %> €</p>
      <%= link_to "Retour à l'accueil", root_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>





