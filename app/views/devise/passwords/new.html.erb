<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6"> <!-- Utilisez la classe col-lg-6 pour limiter la largeur du formulaire -->
      <h2 class="text-center">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3 p-4", placeholder: "Your email address" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-dark btn-lg rounded-1" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
