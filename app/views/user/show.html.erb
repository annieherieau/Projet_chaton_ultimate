


<section id="banner" class="py-3" style="background: #F9F3EC;">
  <div class="container">
    <div class="hero-content py-5 my-3">
      <h3 class="display-1 mt-3 mb-0">Votre profil : </h3>
      <h4><span class="text-primary"><%= @user.email %></span></h4>
    </div>
  </div>
</section>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if @orders.exists? %>
        <table class="table text-center"> <!-- Ajoutez la classe text-center pour centrer le contenu horizontalement -->
          <thead>
            <tr>
              <th scope="col">ID de la commande</th>
              <th scope="col">Détail de la commande</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.id %></td>
                <td>
                  <div class="dropdown">
                    <%= link_to "Détails la commande", order_path(order), class: "btn btn-outline-dark mb-2" %>

                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No orders found.</p>
      <% end %>

      <%= link_to "Retour à l'accueil", root_path, class: "btn btn-outline-dark " %>
      <%= link_to "Editer le profil", edit_user_registration_path, class: "btn btn-dark" %>
    </div>
  </div>
</div>




